# ===========================================
# DOMAIN CONFIGURATION
# ===========================================
# Domain for production deployment (used by Traefik for routing and TLS)
DOMAIN=localhost
# For testing local Traefik: DOMAIN=localhost.tiangolo.com

# Frontend host (used by backend to generate links in emails)
FRONTEND_HOST=http://localhost:5173
# Production example: FRONTEND_HOST=https://dashboard.example.com

# Environment: local, staging, production
ENVIRONMENT=local

# Project identification
PROJECT_NAME="SEO Platform"
STACK_NAME=seo-platform

# ===========================================
# SECURITY
# ===========================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=changethis

# Fernet key for encrypting OAuth tokens
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
TOKEN_ENCRYPTION_KEY=

# ===========================================
# BACKEND
# ===========================================
# CORS origins (comma-separated or JSON array)
BACKEND_CORS_ORIGINS="http://localhost,http://localhost:5173,https://localhost,https://localhost:5173"

# ===========================================
# FIRST SUPERUSER
# ===========================================
FIRST_SUPERUSER=admin@example.com
# IMPORTANT: Change this password after first login!
FIRST_SUPERUSER_PASSWORD=changethis

# ===========================================
# EMAIL (SMTP)
# ===========================================
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=info@example.com
SMTP_TLS=True
SMTP_SSL=False
SMTP_PORT=587

# ===========================================
# DATABASE
# ===========================================
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=app
POSTGRES_USER=postgres
# Generate with: openssl rand -base64 32
POSTGRES_PASSWORD=changethis

# ===========================================
# REDIS & CELERY
# ===========================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===========================================
# GOOGLE OAUTH (for GSC and Ads integration)
# ===========================================
# Get credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/integrations/google/callback

# Google Ads Developer Token
# Apply at: https://ads.google.com/intl/en_us/home/tools/api/
GOOGLE_ADS_DEVELOPER_TOKEN=

# ===========================================
# SERP API (Optional - for real-time rank tracking)
# ===========================================
# SerpApi key (alternative to GSC-based provider)
SERP_API_KEY=
SERP_API_URL=https://serpapi.com/search

# ===========================================
# SERP LIMITS
# ===========================================
MAX_KEYWORDS_PER_PROJECT=500
SERP_REFRESH_DAILY_CAP=100

# ===========================================
# DATA RETENTION (days)
# ===========================================
RETENTION_JOB_RUNS=7
RETENTION_SERP_SNAPSHOTS=90
RETENTION_AUDIT_RUNS=30
RETENTION_LINK_SNAPSHOTS=60
RETENTION_GSC_DAILY=365
RETENTION_ADS_DAILY=365

# ===========================================
# MONITORING (Optional)
# ===========================================
# Sentry DSN for error tracking
SENTRY_DSN=

# ===========================================
# DOCKER IMAGES
# ===========================================
# Configure with your Docker registry images
DOCKER_IMAGE_BACKEND=backend
DOCKER_IMAGE_FRONTEND=frontend
TAG=latest
